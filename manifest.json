{
    "manifest_version": 2,
    "name": "fbclid-fixed",
    "version": "1.1",
    "description": "Fixes the Facebook fbclid param from outbound links by removing it.",
    "icons": {
        "48": "icons/logo-48.png",
        "96": "icons/logo-96.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "fbclid-fixer.js"
        ]
    },
    "applications": {
        "gecko": {
            "id": "fbclid-fixer@andreimaxim.ro"
        }
    }
}
